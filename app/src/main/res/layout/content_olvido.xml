<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content_olvido"
    android:orientation="vertical"
    android:background="@color/background"
    android:tileMode="repeat"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.ivan.olympusgames.Olvido"
    tools:showIn="@layout/app_bar_olvido" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/bg" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:padding="10dp"
            android:layout_marginTop="50dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_label_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="¿OLVIDASTE TU CONTRASEÑA?"
                android:textColor="@color/color_black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/label_olvido_contraseña"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:text="Ingresa tu nombre de usuario y te enviaremos tu contraseña a tu cuenta de correo."
                android:textColor="@color/color_black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/olvido_relleno"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@color/blue_grey"
                android:hint="Escribe tu nombre de usuario"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/color_white"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:gravity="center" >

                <Button
                    android:id="@+id/but_enter_user"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_weight="2"
                    android:background="#FF415842"
                    android:text="ENVIAR"
                    android:textColor="@color/color_white"
                    android:textSize="17sp" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>