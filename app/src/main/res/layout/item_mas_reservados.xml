<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/masreservados"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@color/background">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onItemMasReservadosClick">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/precio_masres"
            android:layout_alignBottom="@+id/rankingreserva">

            <ImageView
                android:id="@+id/valoracion_masres"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/valoracion" />

            <TextView
                android:id="@+id/valoracion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:text="9.5"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_alignBottom="@+id/valoracion_masres"
                android:layout_alignStart="@+id/valoracion_masres" />
        </RelativeLayout>

        <TextView
            android:id="@+id/rankingreserva"
            android:layout_width="30dp"
            android:layout_height="55dp"
            android:scaleType="centerCrop"
            android:text="1"
            android:textColor="@color/color_white"
            android:textSize="50dp" />

        <ImageView
            android:id="@+id/miniatura_juego_masres"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_toRightOf="@+id/rankingreserva"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/nombre_juego_masres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/miniatura_juego_masres"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingRight="50dp"
            android:text="Nombre juego"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/color_white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/plataforma_masres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nombre_juego_masres"
            android:layout_below="@+id/nombre_juego_masres"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingRight="50dp"
            android:text="Plataforma"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/color_white" />

        <TextView
            android:id="@+id/genero_juego_masres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nombre_juego_masres"
            android:layout_below="@+id/plataforma_masres"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingRight="50dp"
            android:text="GÃ©nero"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/color_white" />

        <TextView
            android:id="@+id/precio_masres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/genero_juego_masres"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-15dp"
            android:text="Precio"
            android:textColor="@color/color_white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>
</android.support.v7.widget.CardView>