<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/juegoinicio"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_below="@+id/carrusel"
    android:background="@color/cardview_dark_background"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@color/background">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onReservaClick">

        <TextView
            android:id="@+id/reservaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/miniatura_juego"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Reserva #id"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/color_white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/numarticulosreserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reservaid"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Numero Articulos:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/color_white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/numarticulosreserva_relleno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reservaid"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/numarticulosreserva"
            android:text="cantidad"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/color_white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/totalreserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numarticulosreserva"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Precio total:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/color_white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/preciototalreserva_relleno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/numarticulosreserva"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/totalreserva"
            android:text="cantidad"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/color_white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/estadoReserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:text="Estado Reserva"
            android:textColor="@color/green"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/fechaReserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="Fecha"
            android:textColor="@color/color_white"
            android:textSize="18dp" />

        <View
            android:id="@+id/linea3"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_white" />

    </RelativeLayout>
</android.support.v7.widget.CardView>