<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/juegoinicio"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_below="@+id/carrusel"
    android:background="@color/cardview_dark_background"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="#8090f9">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/miniatura_juego"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/nombre_juego"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/miniatura_juego"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Nombre juego"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/plataforma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nombre_juego"
            android:layout_below="@+id/nombre_juego"
            android:text="Plataforma"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/precio_juego"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nombre_juego"
            android:layout_below="@+id/plataforma"
            android:layout_marginTop="15dp"
            android:text="Precio"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <View
            android:id="@+id/linea"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_above="@+id/action_carrito"
            android:layout_toRightOf="@+id/miniatura_juego"
            android:background="#ffd5d5d5">

        </View>

        <ImageView
            android:id="@+id/valoracion"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" />

        <ImageButton
            android:id="@+id/reservaya"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/precio_juego"
            android:layout_toLeftOf="@+id/action_carrito"
            android:src="@drawable/reservaya" />

        <ImageButton
            android:id="@+id/action_carrito"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/precio_juego"
            android:src="@drawable/add_carro" />

    </RelativeLayout>
</android.support.v7.widget.CardView>