<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_carrito"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ivan.olympusgames.Carrito"
    tools:showIn="@layout/app_bar_carrito">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/nombreJuego1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.56"
                android:text="Juego1"
                android:textSize="28dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Plataforma1"
                android:layout_width="166dp"
                android:layout_height="25dp"
                android:layout_weight="0.26"
                android:text="Plataforma"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Precio1"
                android:layout_width="166dp"
                android:layout_height="25dp"
                android:layout_weight="0.26"
                android:text="Precio"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/botonDesc1"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/holo_red_dark"
                android:text="-"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/cantJuego1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.44"
                android:gravity="center"
                android:text="1" />

            <Button
                android:id="@+id/botonInc1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/holo_red_dark"
                android:text="+"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/nombreJuego2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.52"
                android:text="Juego2"
                android:textSize="28dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Plataforma2"
                android:layout_width="166dp"
                android:layout_height="25dp"
                android:layout_weight="0.26"
                android:text="Plataforma"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Precio2"
                android:layout_width="166dp"
                android:layout_height="25dp"
                android:layout_weight="0.26"
                android:text="Precio "
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/botonDesc2"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/holo_red_dark"
                android:text="-"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/cantJuego2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.44"
                android:gravity="center"
                android:text="1" />

            <Button
                android:id="@+id/botonInc2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/holo_red_dark"
                android:text="+"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/nombreJuego3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.70"
                android:text="Juego3"
                android:textSize="28dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Plataforma3"
                android:layout_width="166dp"
                android:layout_height="25dp"
                android:layout_weight="0.26"
                android:text="Plataforma"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Precio3"
                android:layout_width="166dp"
                android:layout_height="25dp"
                android:text="Precio"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/botonDesc3"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/holo_red_dark"
                android:text="-"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/cantJuego3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.44"
                android:gravity="center"
                android:text="1" />

            <Button
                android:id="@+id/botonInc3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/holo_red_dark"
                android:text="+"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <Button
            android:id="@+id/botonPedidos"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="#ffffa400"
            android:text="Realizar Reserva" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.73"
            android:src="@drawable/juegocarrito" />

    </LinearLayout>
</RelativeLayout>
