<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contenidoreserva"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@color/background">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/miniatura_juego_cont_res"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/nombre_juego_cont_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/miniatura_juego_cont_res"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Nombre juego"
            android:textColor="@color/color_white"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/plataforma_cont_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignLeft="@+id/nombre_juego_cont_res"
            android:layout_below="@+id/nombre_juego_cont_res"
            android:text="Plataforma"
            android:textColor="@color/color_white"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/genero_juego_cont_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nombre_juego_cont_res"
            android:layout_below="@+id/plataforma_cont_res"
            android:layout_marginTop="20dp"
            android:text="GÃ©nero"
            android:textColor="@color/color_white"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/precio_cont_res"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/genero_juego_cont_res"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-15dp"
            android:text="Precio"
            android:textColor="@color/color_white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>
</android.support.v7.widget.CardView>